<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomDatabase.MainActivity2">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/card_view"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="-21dp"
    android:orientation="horizontal">
</RelativeLayout>

<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/crop"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:text="ADD A TO DO LIST"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#000"
        android:id="@+id/title"
        android:textSize="20sp"
        android:textStyle="bold" />
</android.support.v7.widget.Toolbar>

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"

    android:layout_marginTop="100dp"
    android:layout_marginEnd="8dp"
    android:text="Name Of  the task"
    android:textColor="#000"
    android:textSize="20sp"
    android:textStyle="bold" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/nameEditext"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_below="@+id/textView"/>

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="180dp"
    android:text="Description"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:textColor="#000"
    android:textSize="20sp"
    android:textStyle="bold" />

<EditText
    android:id="@+id/descText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView2"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="390dp"
    android:inputType="textMultiLine" />

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_above="@+id/textView4"
    android:layout_alignParentEnd="true"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/greencale" />

        <TextView
            android:id="@+id/dueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/image"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="-90dp"
            android:layout_marginBottom="0dp"
            android:text="Due Date"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
<TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="95dp"
    android:textColor="#000"
    android:textSize="15dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:textStyle="bold"
    android:text="Priority" />
<Switch
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/aswitchid"
    android:onClick="onSwitchClick"
    android:layout_below="@+id/card_view"
    android:layout_alignParentRight="true"
    android:layout_marginEnd="8dp"
    />


<Button
    android:id="@+id/btncontinue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"

    android:layout_marginBottom="27dp"
    android:layout_marginStart="50dp"
    android:background="@color/colorPrimary"
    android:text="Save"
    android:textSize="20sp" />

<Button
    android:id="@+id/viewAll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/btncontinue"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="40dp"
    android:background="@color/colorPrimary"
    android:text="view Tasks"
    android:textSize="17sp" />

</RelativeLayout>