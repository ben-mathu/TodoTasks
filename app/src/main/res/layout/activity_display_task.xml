<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/toolbar_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/add_task"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="#fff"
                android:id="@+id/title"
                android:textSize="20sp"
                android:textStyle="normal" />
        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".displaytask.DisplayTaskActivity">

            <ProgressBar
                android:id="@+id/progressbar_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:visibility="visible"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_display_task_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="8dp"
                        tools:text="Task Name"
                        android:textStyle="bold"
                        android:textSize="21sp"/>

                    <TextView
                        android:id="@+id/textView_display_task_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_below="@+id/textView_display_task_name"
                        tools:text="Description"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/textView_display_due_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_alignParentEnd="true"
                        tools:text="Due Date"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </FrameLayout>
    </LinearLayout>
</ScrollView>
