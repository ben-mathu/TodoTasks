<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">

            <LinearLayout
                android:id="@+id/linearlayout_title_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView_task_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    tool:text="Task Name"
                    android:textSize="21sp"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/textView_list_task_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    tool:text="time"
                    android:textColor="#000"/>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radio_group_subtasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearlayout_title_time"
                android:layout_marginStart="25dp">

                <ListView
                    android:id="@+id/listView_subtask"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView_contributors_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_group_subtasks"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:background="@drawable/wireframe_background"
                tool:text="benard"
                android:textColor="#000"
                android:textSize="12sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>