<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/textView_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="Task Name"
                android:textSize="21sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/textView_utilized_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                android:text="@string/time_remained"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/textView_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tool:text="time"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/textView_task_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_task_name"
                android:layout_marginTop="5dp"
                tool:text="description"
                android:textSize="16sp"
                android:textColor="#000"/>


            <TextView
                android:id="@+id/textView_contributors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/textView_task_description"
                android:layout_below="@+id/textView_task_name"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                tool:text="contributors"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/textView_contributors_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/textView_contributors"
                android:layout_below="@+id/textView_task_name"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:background="@drawable/wireframe_background"
                tool:text="benard"
                android:textColor="#000"
                android:textSize="16sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>